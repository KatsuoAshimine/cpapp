{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "SFlight without devtools",
      "request": "launch",
      "mainClass": "com.sap.cap.sflight.SFlightApplication",
      "projectName": "srv",
      "args": "--spring.profiles.active=devtools-no-restart,default"
    },
    {
      "type": "java",
      "name": "SFlight with devtools",
      "request": "launch",
      "mainClass": "com.sap.cap.sflight.SFlightApplication",
      "projectName": "srv",
      "args": "--spring.profiles.active=default"
    },
    {
      "type": "java",
      "name": "SFlight with devtools-trigger",
      "request": "launch",
      "mainClass": "com.sap.cap.sflight.SFlightApplication",
      "projectName": "srv",
      "args": "--spring.profiles.active=devtools,default"
    },
    {
      "type": "java",
      "name": "SFlight for remote devtools",
      "request": "launch",
      "mainClass": "com.sap.cap.sflight.SFlightApplication",
      "projectName": "srv",
      "args": "--spring.profiles.active=default,devtools-remote"
    },
    {
      "type": "java",
      "name": "remote devtools",
      "request": "launch",
      "mainClass": "org.springframework.boot.devtools.RemoteSpringApplication",
      "projectName": "srv",
      "args": "http://localhost:4004 --spring.profiles.active=devtools,devtools-no-livereload"
    },
    {
      "name": "node.js cds watch",
      "command": "npx cds watch",
      "env": {
        "DEBUG": "sqlite"
      },
      "type": "node-terminal",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/cds/lib/lazy.js",
        "**/cds/lib/req/cls.js",
        "**/odata-v4/okra/**"
      ]
    }
  ]
}
